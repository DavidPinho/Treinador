<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
     <ListView
         android:id="@+id/lv_muscle"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

     </ListView>
     
 <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal" >
	
	  <ImageButton
	      android:id="@+id/btn_calendar"
	      android:src="@drawable/ic_action_event"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:layout_weight="1"
	      android:background="@color/black"	
	        
	      />
	  
	  
	   <ImageButton
                android:id="@+id/btn_athletes"
                android:src="@drawable/ic_action_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                
                 />

        <ImageButton
            android:id="@+id/btn_graphics"
            android:src="@drawable/ic_action_network_cell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            
            />

        <ImageButton
            android:id="@+id/btn_lists"
            android:src="@drawable/ic_action_view_as_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black" />    

   
</LinearLayout>   
     
            
</RelativeLayout>